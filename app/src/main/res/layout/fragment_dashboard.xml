                app:sv_textColor="#ffffff"
                app:sv_tickNumber="6"
                app:sv_unit="°C"
                app:sv_unitTextColor="#ffffff"
                app:sv_unitTextSize="18sp"
                app:sv_unitUnderSpeedText="false"
                app:sv_withTremble="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

